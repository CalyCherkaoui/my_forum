<header class="myheader">
  <div class="my-brand-nav">
      <%= link_to root_path, class: "logo" do %>
        Keto <span>Gourmet</span>
      <%end %>
  </div>
  <nav class="my-nav-wrapper">
    <ul class="my-nav-list">
        <li class="nav-list__item">
          <%= link_to root_path, class: "nav-list__link" do %>
            <i class="fas fa-concierge-bell"></i> Recipes
          <% end %>
          <!-- <a href="index.html" class="nav-list__link current"><i class="fas fa-concierge-bell"></i> Recipes</a> -->
        </li>
        <li class="nav-list__item">
          <%= link_to root_path, class: "nav-list__link" do %>
          <i class="fas fa-rss"></i> Subscribe
          <% end %>
          <!-- <a href="#" class="nav-list__link"><i class="fas fa-rss"></i> Subscribe</a> -->
        </li>

        <% if author_signed_in? %>

          <li class="nav-list__item">
            <%= link_to author_path(current_author), class: "nav-list__link" do %>
              <i class="far fa-user"></i> <%= current_author.name %> Profile
            <% end %>
          </li>

          <li class="nav-list__item">
            <%= link_to "logout", destroy_author_session_path, class: "nav-list__link"%>
          </li>

        <% else %> 
          
          <%= link_to new_author_session_path, class: "nav-list__link" do %>
              Log-in
          <% end %>

        <% end %>

        <!-- <%= authentication_view_helper %> -->
    </ul>
    <div class="my-hamburger-btn">
      <div class="hamburger-btn__line"></div>
    </div>
  </nav>
</header>