          <path d="M4 0h5.5v1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h1V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2z"/>
          <path d="M9.5 3V0L14 4.5h-3A1.5 1.5 0 0 1 9.5 3z"/>
          <path fill-rule="evenodd" d="M4.5 12.5A.5.5 0 0 1 5 12h3a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zm0-2A.5.5 0 0 1 5 10h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zm1.639-3.708l1.33.886 1.854-1.855a.25.25 0 0 1 .289-.047l1.888.974V8.5a.5.5 0 0 1-.5.5H5a.5.5 0 0 1-.5-.5V8s1.54-1.274 1.639-1.208zM6.25 6a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5z"/>
        </svg>
      </div>

      <div class="sum_likes statistics_card">
        <span><%= @author.name%>'s articles recieved 30k </span>
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-suit-heart-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          <path d="M4 1c2.21 0 4 1.755 4 3.92C8 2.755 9.79 1 12 1s4 1.755 4 3.92c0 3.263-3.234 4.414-7.608 9.608a.513.513 0 0 1-.784 0C3.234 9.334 0 8.183 0 4.92 0 2.755 1.79 1 4 1z"/>
        </svg>
      </div>

      <div class="contact_author">
        <p>Contact <%= @author.name %><p>
        <form class="contact_form_container">
          <input type="text" id="contact_title" name="contact_title" placeholder="Type your Message title here!"><br>
          <textarea name="contact_msg" id="contact_msg" cols="30" rows="10" placeholder="Type your Message here!">
          </textarea>
          <button>Send messsage!</button>
        </form>
      </div>

      <div class="add_article">
        <button>
          <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-file-earmark-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="M4 0h5.5v1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h1V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2z"/>
            <path d="M9.5 3V0L14 4.5h-3A1.5 1.5 0 0 1 9.5 3z"/>
            <path fill-rule="evenodd" d="M8 6.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 .5-.5z"/>
          </svg>
          Add new article
        </button>
      </div>

      <div class="edit_profile">
        <button>
          <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-bounding-box" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M1.5 1a.5.5 0 0 0-.5.5v3a.5.5 0 0 1-1 0v-3A1.5 1.5 0 0 1 1.5 0h3a.5.5 0 0 1 0 1h-3zM11 .5a.5.5 0 0 1 .5-.5h3A1.5 1.5 0 0 1 16 1.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 1-.5-.5zM.5 11a.5.5 0 0 1 .5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 1 0 1h-3A1.5 1.5 0 0 1 0 14.5v-3a.5.5 0 0 1 .5-.5zm15 0a.5.5 0 0 1 .5.5v3a1.5 1.5 0 0 1-1.5 1.5h-3a.5.5 0 0 1 0-1h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 1 .5-.5z"/>
            <path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
          </svg>
          Edit your profile
        </button>
      </div>

    </div>
  </div>
  <div class="author_profile_articles">
    <div class="tab_container" data-controller="tabs">
      <div class="tab_button_container">
        <button class="tab_button" data-action="click->tabs#activateTab" data-target="tabs.tabButton" value="0">Popular</button>
        <button class="tab_button" data-action="tabs#activateTab" data-target="tabs.tabButton" value="1">Latest</button>
        <button class="tab_button" data-action="tabs#activateTab" data-target="tabs.tabButton" value="2">Unpublished</button>
        <button class="tab_button" data-action="tabs#activateTab" data-target="tabs.tabButton" value="3">Draft</button>
        <button class="tab_button" data-action="tabs#activateTab" data-target="tabs.tabButton" value="4">All</button>
      </div>

      <div class="tab_panel" data-target="tabs.tabPanel">Popular articles</div>
      <div class="tab_panel" data-target="tabs.tabPanel">Latest Published articles</div>
      <div class="tab_panel" data-target="tabs.tabPanel">Unpublished articles</div>
      <div class="tab_panel" data-target="tabs.tabPanel">Drafted articles</div>
      <div class="tab_panel" data-target="tabs.tabPanel">All articles</div>
    </div>
  </div>
</section>

